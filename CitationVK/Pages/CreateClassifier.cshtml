@page
@model CreateClassifierModel
@{
    ViewData["Title"] = "Train Classifier";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h3 class="mb-4 text-dark">@ViewData["Title"]</h3>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatasetId"></label>
                <select asp-for="DatasetId" asp-items="@(new SelectList(Model.Datasets, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="DatasetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-info" type="submit" value="Train" />
            </div>
        </form>
    </div>
</div>
