@page
@model CitationVK.Pages.EditIndexModel
@{
    ViewData["Title"] = "Edit Configuration";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <h3 class="mb-4 text-dark">@ViewData["Title"]</h3>
        <form method="post">
            <input asp-for="Configuration.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Configuration.Description"></label>
                <textarea asp-for="Configuration.Description" class="form-control" rows="16"></textarea>
                <span asp-validation-for="Configuration.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox custom-control">
                    <input asp-for="Configuration.IsPublic" class="custom-control-input">
                    <label asp-for="Configuration.IsPublic" class="custom-control-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-info" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
